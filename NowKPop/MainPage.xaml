<Page
    x:Class="NowKPop.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NowKPop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	RequestedTheme="Light"
    mc:Ignorable="d">
	<Page.TopAppBar>
		<AppBar x:Name="appBar" Background="#ffffff">
			<StackPanel Orientation="Horizontal">
				<AppBarButton Foreground="Black" Icon="Home" Label="Home" x:Name="homeButton" Click="HomeButton_OnClick"/>
				<AppBarButton Foreground="Black" Icon="OtherUser" Label="Login" x:Name="loginButton" Click="LoginButton_OnClick"/>
                <AppBarButton Foreground="Black" Icon="Manage" Label="Dashboard" x:Name="dashboardButton" Click="dashboardButton_OnClick"/>
                <AppBarButton Foreground="Black" Icon="Bullets" Label="RSS" x:Name="rssButton" Click="rssButton_OnClick"/>
			</StackPanel>
		</AppBar>
	</Page.TopAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<WebView x:Name="NowKPopWeb" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></WebView>
    </Grid>
</Page>
